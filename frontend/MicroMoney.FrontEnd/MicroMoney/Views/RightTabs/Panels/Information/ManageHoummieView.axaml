<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:MicroMoney.ViewModels.RightTabs.Panels.Information"
             x:DataType="vm:ManageHoummieViewModel"
             x:Class="MicroMoney.Views.RightTabs.Panels.Information.ManageHoummieView">

    <StackPanel Margin="20" Orientation="Vertical" HorizontalAlignment="Left">
    <TextBlock Margin="0 5" >Имя:</TextBlock>
    <TextBox  Width="300" Text="{Binding FirstName}" Watermark="Введите имя"/>
    <TextBlock Margin="0 5" >Фамилия:</TextBlock>
    <TextBox Width="300" Text="{Binding SecondName}" Watermark="Введите фамилию"/>
    <TextBlock Margin="0 15 0 5">Заметки:</TextBlock>
    <TextBox Watermark="Какие то важные для вас данные о человеке" Text="{Binding Notes}" Width="300" Height="100" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding SaveCommand}" Margin="20" Width="100" HorizontalContentAlignment="Center" Content="Сохранить"/>
            <Button Command="{Binding CancelCommand}" Margin="20" Width="100" HorizontalContentAlignment="Center" Content="Отмена" />
        </StackPanel>
    </StackPanel>
</UserControl>
