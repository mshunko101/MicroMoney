<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:MicroMoney.ViewModels"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             x:DataType="vm:MmLoginViewModel"
             x:Class="MicroMoney.Views.MmLoginView">
         <Border>
            <Border MaxWidth="600" MaxHeight="240" BorderThickness="1" BorderBrush="#AAAAAA" Background="WhiteSmoke">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" FontWeight="Bold" Grid.ColumnSpan="2" Margin="10" Text="{Binding Title}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Text="{Binding Message}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="5" Text="Логин:" HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="5" Text="Пароль:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding Login}" HorizontalAlignment="Left" Width="100"/>
                    <TextBox PasswordChar="*" Grid.Row="3" Margin="5" Grid.Column="1" Text="{Binding Password}" HorizontalAlignment="Left" Width="100"/>
                    <Button Grid.Row="4" Grid.Column="0" Content="Войти" Command="{Binding LoginCommand}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Grid.Row="4" Grid.Column="1" Content="Выход" Command="{Binding ExitCommand}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Border>
</UserControl>
